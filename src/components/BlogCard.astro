---
import dayjs from 'dayjs';
const { content } = Astro.props;
const date = dayjs(content.publishedDate).format('YYYY.MM.DD');
console.log(content);
---

<!-- map関数で展開 -->
<a href={"/blog/" + content.id} class="sokenkai__blogcard">
  <img
    src={content.featuredImage.url}
    width={content.featuredImage.width}
    height={content.featuredImage.height}
    alt="ブログ記事のトップ画像"
  />
  <div class="sokenkai__blogcard__texts">
    <p>{date}</p>
    <h3>{content.title}</h3>
  </div>
</a>

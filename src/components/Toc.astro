<div class="toc"></div>

<script>
  import * as tocbot from 'tocbot'

  tocbot.init({
    tocSelector: '.toc', // 目次を追加するクラス名
    contentSelector: '.p-topicContent', // 目次を取得するコンテンツ
    headingSelector: 'h2', // 目次として取得する見出しタグ
    headingsOffset: 109,
    scrollSmoothOffset: -109,
    onClick: function (e) {},
  })

   // 目次にナンバリングを追加する関数
   function addNumberingToTOC() {
    const tocItems = document.querySelectorAll('.toc .toc-list-item');
    tocItems.forEach((item, index) => {
      const numbering = `${index + 1}. `; // 1, 2, 3 ... の形式で番号を作成
      const link = item.querySelector('.toc-link'); // リンクを取得
      if (link) {
        link.innerHTML = numbering + link.innerHTML; // リンクテキストの先頭に番号を追加
      }
    });
  }

  // DOMが完全にロードされた後にナンバリングを追加
  document.addEventListener('DOMContentLoaded', addNumberingToTOC);
</script>
